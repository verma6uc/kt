// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Monitoring Models
model userActivity {
  id            Int      @id @default(autoincrement())
  user_id       Int
  company_id    Int
  date          DateTime @db.Date
  session_count Int      @default(1)
  created_at    DateTime @default(now())

  company       company  @relation(fields: [company_id], references: [id], onDelete: Cascade)
  user          user     @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("user_activity")
  @@index([company_id, date])
}

model featureUsage {
  id           Int      @id @default(autoincrement())
  company_id   Int
  feature_name String
  usage_count  Int      @default(1)
  created_at   DateTime @default(now())

  company      company  @relation(fields: [company_id], references: [id], onDelete: Cascade)

  @@map("feature_usage")
  @@index([company_id, feature_name])
}

model growthMetrics {
  id           Int      @id @default(autoincrement())
  company_id   Int
  active_users Int
  total_storage Float
  api_calls    Int
  created_at   DateTime @default(now())

  company      company  @relation(fields: [company_id], references: [id], onDelete: Cascade)

  @@map("growth_metrics")
  @@index([company_id, created_at])
}

model errorLogs {
  id            Int      @id @default(autoincrement())
  company_id    Int
  error_type    String
  error_message String
  stack_trace   String?
  date          DateTime @db.Date
  count         Int      @default(1)
  created_at    DateTime @default(now())

  company       company  @relation(fields: [company_id], references: [id], onDelete: Cascade)

  @@map("error_logs")
  @@index([company_id, date])
}

model resourceUsage {
  id            Int      @id @default(autoincrement())
  company_id    Int
  resource_type String
  usage_value   Float
  unit          String
  created_at    DateTime @default(now())

  company       company  @relation(fields: [company_id], references: [id], onDelete: Cascade)

  @@map("resource_usage")
  @@index([company_id, created_at])
}

